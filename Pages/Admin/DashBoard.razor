@page "/admin/dashboard"
@attribute [Authorize(Roles = "Admin")]
@inject NavigationManager Navigation

<h3>Admin Dashboard</h3>

<div class="row">
    <div class="col-md-3">
        <button class="btn btn-primary" @onclick="() => Navigation.NavigateTo(addU)">Add User</button>
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary" @onclick="() => Navigation.NavigateTo(manageU)">Manage Users</button>
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary" @onclick="() => Navigation.NavigateTo(classes)">Manage Classes</button>
    </div>
</div>
@code{
    string addU = "/admin/adduser";
    string manageU = "/admin/manageusers";
    string classes = "/admin/classes";
}